@model Loja_Classe_Abstrata.Models.Moto

@{
    ViewData["Title"] = "Adicionar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Adiconar Moto</h1>

<h4>Moto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
